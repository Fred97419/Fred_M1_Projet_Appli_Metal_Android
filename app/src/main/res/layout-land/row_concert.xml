<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageRow"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/common_full_open_on_phone" />

    <TextView
        android:id="@+id/titreRow"
        android:layout_width="321dp"
        android:layout_height="29dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imageRow"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateRow"
        android:layout_width="110dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageRow"
        app:layout_constraintTop_toBottomOf="@+id/titreRow" />

    <TextView
        android:id="@+id/heureRow"
        android:layout_width="112dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageRow"
        app:layout_constraintTop_toBottomOf="@+id/dateRow" />

    <TextView
        android:id="@+id/dureeRow"
        android:layout_width="124dp"
        android:layout_height="20dp"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="6dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/dateRow"
        app:layout_constraintTop_toBottomOf="@+id/titreRow" />

    <Button
        android:id="@+id/go"
        android:layout_width="69dp"
        android:layout_height="35dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="8dp"
        android:background="#8BC34A"
        android:text="@string/voir"
        app:layout_constraintStart_toEndOf="@+id/heureRow"
        app:layout_constraintTop_toBottomOf="@+id/dureeRow" />

    <Button
        android:id="@+id/supprimer"
        android:layout_width="53dp"
        android:layout_height="36dp"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="4dp"
        android:background="#F44336"
        android:text="X"
        app:layout_constraintStart_toEndOf="@+id/go"
        app:layout_constraintTop_toBottomOf="@+id/dureeRow" />
</androidx.constraintlayout.widget.ConstraintLayout>