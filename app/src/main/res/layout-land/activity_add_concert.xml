<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddConcertActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="45dp"
        android:text="@string/heure"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:text="Heure : " />

    <EditText
        android:id="@+id/edit_duree"
        android:layout_width="173dp"
        android:layout_height="43dp"
        android:layout_marginStart="172dp"
        android:layout_marginLeft="172dp"
        android:layout_marginTop="264dp"
        android:hint="@string/duree_hint"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/duree"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:text="DurÃ©e : " />

    <EditText
        android:id="@+id/nom_concert"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="16dp"
        android:hint="@string/name_hint"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/lat_edit"
        android:layout_width="120dp"
        android:layout_height="41dp"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:hint="@string/lat"
        android:inputType="datetime|numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/edit_DATE"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/lng_edit"
        android:layout_width="120dp"
        android:layout_height="41dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:hint="@string/lng"
        android:inputType="datetime|numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/edit_heure"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:text="@string/lng"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/nom_concert"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="400dp"
        android:layout_marginLeft="400dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/lat"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lat_edit" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="732dp"
        android:layout_height="51dp"
        android:gravity="center"
        android:text="@string/add_concert_titre"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="68dp"
        android:text="@string/nom"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nom : " />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:text="@string/date"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:text="Date : " />

    <EditText
        android:id="@+id/edit_DATE"
        android:layout_width="174dp"
        android:layout_height="43dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="132dp"
        android:hint="@string/date_hint"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_heure"
        android:layout_width="174dp"
        android:layout_height="43dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="25dp"
        android:hint="@string/heure_hint"
        android:inputType="time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_DATE" />

    <Button
        android:id="@+id/ajout_photo"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="121dp"
        android:layout_height="69dp"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="16dp"
        android:background="#00BCD4"
        android:onClick="prendrePhoto"
        android:text="@string/add_concert_photo"
        android:textColorHighlight="#00BCD4"
        android:textColorLink="#03A9F4"
        app:layout_constraintStart_toEndOf="@+id/nom_concert"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/ajout_gallerie"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="121dp"
        android:layout_height="69dp"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="36dp"
        android:background="#00BCD4"
        android:onClick="prendreGallerie"
        android:text="@string/add_concert_gallerie"
        android:textColorHighlight="#00BCD4"
        android:textColorLink="#03A9F4"
        app:layout_constraintStart_toEndOf="@+id/edit_heure"
        app:layout_constraintTop_toBottomOf="@+id/ajout_photo" />

    <Button
        android:id="@+id/valider"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="133dp"
        android:layout_height="61dp"
        android:layout_marginStart="388dp"
        android:layout_marginLeft="388dp"
        android:layout_marginTop="16dp"
        android:background="#8BC34A"
        android:onClick="valider"
        android:text="@string/valider"
        android:textColorHint="#00C05353"
        android:textColorLink="#8DEB0E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lng_edit" />

    <Button
        android:id="@+id/anuler"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="145dp"
        android:layout_height="64dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:background="#E91E63"
        android:onClick="annuler"
        android:text="@string/annuler"
        android:textColorHint="#00C05353"
        android:textColorLink="#8DEB0E"
        app:layout_constraintStart_toEndOf="@+id/valider"
        app:layout_constraintTop_toBottomOf="@+id/ajout_gallerie" />

</androidx.constraintlayout.widget.ConstraintLayout>