<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageRow"
        android:layout_width="97dp"
        android:layout_height="97dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/common_full_open_on_phone" />

    <TextView
        android:id="@+id/titreRow"
        android:layout_width="307dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Titre"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imageRow"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateRow"
        android:layout_width="110dp"
        android:layout_height="23dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:text="Date"
        app:layout_constraintStart_toEndOf="@+id/imageRow"
        app:layout_constraintTop_toBottomOf="@+id/titreRow" />

    <TextView
        android:id="@+id/heureRow"
        android:layout_width="112dp"
        android:layout_height="23dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="Heure"
        app:layout_constraintStart_toEndOf="@+id/imageRow"
        app:layout_constraintTop_toBottomOf="@+id/dateRow" />

    <TextView
        android:id="@+id/dureeRow"
        android:layout_width="124dp"
        android:layout_height="20dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="8dp"
        android:text="DurÃ©e"
        app:layout_constraintStart_toEndOf="@+id/dateRow"
        app:layout_constraintTop_toBottomOf="@+id/titreRow" />

    <Button
        android:id="@+id/go"
        android:layout_width="66dp"
        android:layout_height="36dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="8dp"
        android:background="#8BC34A"
        android:text="@string/voir"
        app:layout_constraintStart_toEndOf="@+id/heureRow"
        app:layout_constraintTop_toBottomOf="@+id/dureeRow" />

    <Button
        android:id="@+id/supprimer"
        android:layout_width="53dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:background="#F44336"
        android:text="X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dureeRow" />
</androidx.constraintlayout.widget.ConstraintLayout>